<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_alignStart="@id/chat_res"
        android:layout_below="@id/chat_res"
        android:id="@+id/receiver_name"
        android:text="Receiver Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp" />
    <TextView
        android:text="Received"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:textSize="20sp"
        android:background="@drawable/msg_back"
        android:layout_alignParentLeft="true"
        android:id="@+id/chat_res"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/receivertime"
        android:text="receiver time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_alignStart="@id/receiver_name"
        android:layout_below="@id/receiver_name"/>
    <TextView
        android:text="sent"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:textSize="20dp"
        android:background="@drawable/msg_back"
        android:layout_alignParentRight="true"
        android:id="@+id/chat_sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_alignStart="@id/chat_sent"
        android:layout_below="@id/chat_sent"
        android:id="@+id/sendTime"
        android:text="time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp" />

</RelativeLayout>